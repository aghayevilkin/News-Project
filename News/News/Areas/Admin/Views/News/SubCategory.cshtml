@model List<NewsSubCategory>
@{
    ViewData["Title"] = "Sub Category";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">News Sub Category</h4>
            <div class="mr-2">
                <a asp-controller="news" asp-action="createsubcategory" class="btn btn-info"><i class="mdi mdi-plus-circle-outline"></i> Add</a>
                <a asp-controller="news" asp-action="category" class="btn btn-danger"> Category</a>
                <a asp-controller="news" asp-action="index" class="btn btn-success"> News</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Category</th>
                            <th scope="col">Sub Category</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.NewsCategory.Name</td>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-area="admin" asp-controller="news" asp-action="updatesubcategory" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                    <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="news" asp-action="deletesubcategory" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
