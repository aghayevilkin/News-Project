@model SocialToUser
@{
    ViewData["Title"] = "Social To User Create";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="mt-5">Create Social To User</h2>
            </div>
            <div class="col-6">
                <form asp-controller="social" asp-action="socialtousercreate" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Link">Link</label>
                        <input class="form-control" asp-for="@Model.Link" placeholder="https://facebook.com">
                        <span asp-validation-for="@Model.Link" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.SocialId">Social</label>
                        <select class="form-control" asp-for="@Model.SocialId" asp-items="@(new SelectList(ViewBag.Socials, "Id", "Icon"))">
                        </select>
                        <span asp-validation-for="@Model.SocialId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserId">User</label>
                        <select class="form-control" asp-for="@Model.UserId" asp-items="@(new SelectList(ViewBag.Users, "Id", "Email"))">
                        </select>
                        <span asp-validation-for="@Model.UserId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button asp-action="socialtouser" class="btn btn-danger">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>