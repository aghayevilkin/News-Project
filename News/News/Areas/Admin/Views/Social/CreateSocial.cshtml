@model Social
@{
    ViewData["Title"] = "CreateSocial";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="mt-5">Create Social</h2>
            </div>
            <div class="col-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-controller="social" asp-action="createsocial" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Icon">Icon</label>
                        <input type="text" class="form-control" id="Icon" asp-for="Icon" placeholder="zmdi zmdi-facebook">
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Link">Link</label>
                        <input type="text" class="form-control" id="Link" asp-for="Link" placeholder="https://facebook.com">
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button asp-action="index" class="btn btn-danger">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

