@model VmBase
@{
    ViewData["Title"] = "Contact";
    var counter = 0;
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Subject
                            </th>
                            <th>
                                Content
                            </th>
                            <th>
                                Date
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Messages)
                        {
                            <tr>
                                <td>@{counter++;}@counter.</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Subject</td>
                                <td>@item.Content</td>
                                <td>@item.AddedDate</td>
                                <td><a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="contact" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>